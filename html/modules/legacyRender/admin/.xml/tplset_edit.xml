<?xml version="1.0" encoding="utf-8" ?>
<xoopscube-dynaactionform>
	<form-bean name="TplsetEditForm" type="XCube_ActionForm">
		<form-property name="tplset_id" type="Int" />
		<form-property name="tplset_desc" type="String" />
		<form-property name="tplset_credits" type="Text" />
	</form-bean>
	<form-validation>
		<field property="tplset_id" depends="required">
			<arg0 key="const._AD_LEGACYRENDER_LANG_TPLSET_ID" />
			<msg name="required" key="const._AD_LEGACYRENDER_ERROR_REQUIRED" />
		</field>
		<field property="tplset_desc" depends="maxlength">
			<arg0 key="const._AD_LEGACYRENDER_LANG_TPLSET_DESC" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._AD_LEGACYRENDER_ERROR_MAXLENGTH" />
			<var name="maxlength" value="255" />
		</field>
	</form-validation>
</xoopscube-dynaactionform>
