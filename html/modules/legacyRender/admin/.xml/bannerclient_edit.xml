<?xml version="1.0" encoding="utf-8" ?>
<xoopscube-dynaactionform>
	<form-bean name="BannerclientAdminEditForm" type="XCube_ActionForm">
		<form-property name="cid" type="Int" />
		<form-property name="name" type="String" />
		<form-property name="contact" type="String" />
		<form-property name="email" type="String" />
		<form-property name="login" type="String" />
		<form-property name="passwd" type="String" />
		<form-property name="extrainfo" type="Text" />
	</form-bean>
	<form-validation>
		<field property="cid" depends="required">
			<arg0 key="const._AD_LEGACYRENDER_LANG_CID" />
			<msg name="required" key="const._AD_LEGACYRENDER_ERROR_REQUIRED" />
		</field>
		<field property="name" depends="required,maxlength">
			<arg0 key="const._AD_LEGACYRENDER_LANG_NAME" />
			<msg name="required" key="const._AD_LEGACYRENDER_ERROR_REQUIRED" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._AD_LEGACYRENDER_ERROR_MAXLENGTH" />
			<var name="maxlength" value="60" />
		</field>
		<field property="contact" depends="maxlength">
			<arg0 key="const._AD_LEGACYRENDER_LANG_CONTACT" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._AD_LEGACYRENDER_ERROR_MAXLENGTH" />
			<var name="maxlength" value="60" />
		</field>
		<field property="email" depends="maxlength,email">
			<arg0 key="const._AD_LEGACYRENDER_LANG_EMAIL" />
			<msg name="email" key="const._AD_LEGACYRENDER_ERROR_EMAIL" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._AD_LEGACYRENDER_ERROR_MAXLENGTH" />
			<var name="maxlength" value="60" />
		</field>
		<field property="login" depends="maxlength">
			<arg0 key="const._AD_LEGACYRENDER_LANG_LOGIN" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._AD_LEGACYRENDER_ERROR_MAXLENGTH" />
			<var name="maxlength" value="10" />
		</field>
		<field property="passwd" depends="maxlength">
			<arg0 key="const._AD_LEGACYRENDER_LANG_PASSWD" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._AD_LEGACYRENDER_ERROR_MAXLENGTH" />
			<var name="maxlength" value="10" />
		</field>
	</form-validation>
</xoopscube-dynaactionform>
