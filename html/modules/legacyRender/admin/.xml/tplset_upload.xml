<?xml version="1.0" encoding="utf-8" ?>
<xoopscube-dynaactionform>
	<form-bean name="TplsetUploadForm" type="XCube_ActionForm">
		<form-property name="upload" type="File" />
		<form-property name="tplset_name" type="String" />
	</form-bean>
	<form-validation>
		<field property="upload" depends="required">
			<arg0 key="const._AD_LEGACYRENDER_LANG_TPLSET_UPLOAD_FILE" />
			<msg name="required" key="const._AD_LEGACYRENDER_ERROR_REQUIRED" />
		</field>
		<field property="tplset_name" depends="maxlength">
			<arg0 key="const._AD_LEGACYRENDER_LANG_TPLSET_DESC" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._AD_LEGACYRENDER_ERROR_MAXLENGTH" />
			<var name="maxlength" value="50" />
		</field>
	</form-validation>
</xoopscube-dynaactionform>
