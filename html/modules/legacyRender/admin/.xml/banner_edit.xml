<?xml version="1.0" encoding="utf-8" ?>
<xoopscube-dynaactionform>
	<form-bean name="BannerAdminEditForm" type="XCube_ActionForm">
		<form-property name="bid" type="Int" />
		<form-property name="cid" type="Int" />
		<form-property name="imptotal" type="Int" />
		<form-property name="imageurl" type="String" />
		<form-property name="clickurl" type="String" />
		<form-property name="htmlbanner" type="Bool" />
		<form-property name="htmlcode" type="Text" />
	</form-bean>
	<form-validation>
		<field property="bid" depends="required">
			<arg0 key="const._AD_LEGACYRENDER_LANG_BID" />
			<msg name="required" key="const._AD_LEGACYRENDER_ERROR_REQUIRED" />
		</field>
		<field property="cid" depends="required,objectExsist">
			<arg0 key="const._AD_LEGACYRENDER_LANG_CID" />
			<msg name="required" key="const._AD_LEGACYRENDER_ERROR_REQUIRED" />
			<msg name="objectExist" key="const._AD_LEGACYRENDER_ERROR_OBJECT_EXIST" />
			<var name="handler" value="bannerclient" />
			<var name="module" value="legacyRender" />
		</field>
		<field property="imptotal" depends="required">
			<arg0 key="const._AD_LEGACYRENDER_LANG_IMPTOTAL" />
			<msg name="required" key="const._AD_LEGACYRENDER_ERROR_REQUIRED" />
		</field>
		<field property="imageurl" depends="maxlength">
			<arg0 key="const._AD_LEGACYRENDER_LANG_IMAGEURL" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._AD_LEGACYRENDER_ERROR_MAXLENGTH" />
			<var name="maxlength" value="255" />
		</field>
		<field property="clickurl" depends="maxlength">
			<arg0 key="const._AD_LEGACYRENDER_LANG_CLICKURL" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._AD_LEGACYRENDER_ERROR_MAXLENGTH" />
			<var name="maxlength" value="255" />
		</field>
	</form-validation>
</xoopscube-dynaactionform>
