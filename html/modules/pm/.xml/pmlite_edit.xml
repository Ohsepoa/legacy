<?xml version="1.0" encoding="utf-8" ?>
<xoopscube-dynaactionform>
	<form-bean name="PmliteEditForm" type="XCube_ActionForm">
		<form-property name="id" type="Int" />
		<form-property name="create_unixtime" type="Int" />
		<form-property name="update_unixtime" type="Int" />
		<form-property name="subject" type="String" />
		<form-property name="message" type="Text" />
	</form-bean>
	<form-validation>
		<field property="subject" depends="required,maxlength">
			<arg0 key="const._MD_PM_LANG_SUBJECT" />
			<msg name="required" key="const._MD_PM_ERROR_REQUIRED" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._MD_PM_ERROR_MAXLENGTH" />
			<var name="maxlength" value="255" />
		</field>
		<field property="message" depends="required">
			<arg0 key="const._MD_PM_LANG_MESSAGE" />
			<msg name="required" key="const._MD_PM_ERROR_REQUIRED" />
		</field>
	</form-validation>
</xoopscube-dynaactionform>
