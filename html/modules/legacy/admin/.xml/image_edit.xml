<?xml version="1.0" encoding="utf-8" ?>
<xoopscube-dynaactionform>
	<form-bean name="ImageAdminEditForm" type="Legacy_ImageUploadForm">
		<form-property name="image_id" type="Int" />
		<form-property name="image_display" type="Bool" />
		<form-property name="image_weight" type="Int" />
	</form-bean>
	<form-validation>
		<field property="image_id" depends="required">
			<arg0 key="const._AD_LEGACY_LANG_IMAGE_ID" />
			<msg name="required" key="const._MD_LEGACY_ERROR_REQUIRED" />
		</field>
		<field property="image_weight" depends="required">
			<arg0 key="const._AD_LEGACY_LANG_IMAGE_WEIGHT" />
			<msg name="required" key="const._MD_LEGACY_ERROR_REQUIRED" />
		</field>
	</form-validation>
</xoopscube-dynaactionform>
