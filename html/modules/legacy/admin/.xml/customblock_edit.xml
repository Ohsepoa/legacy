<?xml version="1.0" encoding="utf-8" ?>
<xoopscube-dynaactionform>
	<form-bean name="CustomBlockEditForm" type="Legacy_BlockEditForm">
		<form-property name="content" type="Text" />
		<form-property name="ctype" type="String" />
	</form-bean>
	<form-validation>
		<field property="content" depends="required">
			<arg0 key="const._AD_LEGACY_LANG_CONTENT" />
			<msg name="required" key="const._MD_LEGACY_ERROR_REQUIRED" />
		</field>
		<field property="ctype" depends="required,maxlength">
			<arg0 key="const._AD_LEGACY_LANG_BLOCK_TYPE" />
			<msg name="required" key="const._MD_LEGACY_ERROR_REQUIRED" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._MD_LEGACY_ERROR_MAXLENGTH" />
			<var name="maxlength" value="1" />
		</field>
	</form-validation>
</xoopscube-dynaactionform>
