<?xml version="1.0" encoding="utf-8" ?>
<xoopscube-dynaactionform>
	<form-bean name="BlockInstallEditForm" type="XCube_ActionForm">
		<form-property name="bid" type="Int" />
		<form-property name="options" type="String[]" />
		<form-property name="name" type="String" />
		<form-property name="title" type="String" />
		<form-property name="side" type="Int" />
		<form-property name="weight" type="Int" />
		<form-property name="bcachetime" type="Int" />
		<form-property name="bmodule" type="Int[]" />
		<form-property name="groupid" type="Int[]" />
	</form-bean>
	<form-validation>
		<field property="bid" depends="required">
			<arg0 key="const._AD_LEGACY_LANG_BID" />
			<msg name="required" key="const._MD_LEGACY_ERROR_REQUIRED" />
		</field>
		<field property="name" depends="required,maxlength">
			<arg0 key="const._AD_LEGACY_LANG_NAME" />
			<msg name="required" key="const._MD_LEGACY_ERROR_REQUIRED" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._MD_LEGACY_ERROR_MAXLENGTH" />
			<var name="maxlength" value="150" />
		</field>
		<field property="title" depends="required,maxlength">
			<arg0 key="const._AD_LEGACY_LANG_TITLE" />
			<msg name="required" key="const._MD_LEGACY_ERROR_REQUIRED" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._MD_LEGACY_ERROR_MAXLENGTH" />
			<var name="maxlength" value="255" />
		</field>
		<field property="side" depends="required">
			<arg0 key="const._AD_LEGACY_LANG_SIDE" />
			<msg name="required" key="const._MD_LEGACY_ERROR_REQUIRED" />
		</field>
		<field property="weight" depends="required">
			<arg0 key="const._AD_LEGACY_LANG_WEIGHT" />
			<msg name="required" key="const._MD_LEGACY_ERROR_REQUIRED" />
		</field>
		<field property="bcachetime" depends="required">
			<arg0 key="const._AD_LEGACY_LANG_BCACHETIME" />
			<msg name="required" key="const._MD_LEGACY_ERROR_REQUIRED" />
		</field>
	</form-validation>
</xoopscube-dynaactionform>
