<?xml version="1.0" encoding="utf-8" ?>
<xoopscube-dynaactionform>
	<form-bean name="BlockListForm" type="XCube_ActionForm">
		<form-property name="weight" type="Int[]" />
		<form-property name="side" type="Int[]" />
		<form-property name="bcachetime" type="Int[]" />
	</form-bean>
	<form-validation>
		<field property="weight" depends="required,intRange">
			<arg0 key="const._AD_LEGACY_LANG_WEIGHT" />
			<msg name="required" key="const._MD_LEGACY_ERROR_REQUIRED" />
			<msg name="intRange" key="const._AD_LEGACY_ERROR_INTRANGE" />
			<var name="min" value="0" />
			<var name="max" value="255" />
		</field>
		<field property="side" depends="required,objectExist">
			<arg0 key="const._AD_LEGACY_LANG_SIDE" />
			<msg name="required" key="const._MD_LEGACY_ERROR_REQUIRED" />
			<msg name="objectExist" key="const._AD_LEGACY_ERROR_OBJECTEXIST" />
			<var name="handler" value="columnside" />
			<var name="module" value="legacy" />
		</field>
		<field property="bcachetime" depends="required,objectExist">
			<arg0 key="const._AD_LEGACY_LANG_BCACHETIME" />
			<msg name="required" key="const._MD_LEGACY_ERROR_REQUIRED" />
			<msg name="objectExist" key="const._AD_LEGACY_ERROR_OBJECTEXIST" />
			<var name="handler" value="cachetime" />
		</field>
	</form-validation>
</xoopscube-dynaactionform>
