<?xml version="1.0" encoding="utf-8" ?>
<xoopscube-dynaactionform>
	<form-bean name="MiscFriendForm" type="XCube_ActionForm">
		<form-property name="yname" type="String" />
		<form-property name="ymail" type="String" />
		<form-property name="fname" type="String" />
		<form-property name="fmail" type="String" />
	</form-bean>
	<form-validation>
		<field property="yname" depends="required">
			<arg0 key="const._MD_LEGACY_LANG_YNAME" />
			<msg name="required" key="const._MD_LEGACY_ERROR_REQUIRED" />
		</field>
		<field property="ymail" depends="required,email">
			<arg0 key="const._MD_LEGACY_LANG_YMAIL" />
			<msg name="required" key="const._MD_LEGACY_ERROR_REQUIRED" />
			<msg name="required" key="const._MD_LEGACY_ERROR_EMAIL" />
		</field>
		<field property="fname" depends="required">
			<arg0 key="const._MD_LEGACY_LANG_FNAME" />
			<msg name="required" key="const._MD_LEGACY_ERROR_REQUIRED" />
		</field>
		<field property="fmail" depends="required,email">
			<arg0 key="const._MD_LEGACY_LANG_FMAIL" />
			<msg name="required" key="const._MD_LEGACY_ERROR_REQUIRED" />
			<msg name="required" key="const._MD_LEGACY_ERROR_EMAIL" />
		</field>
	</form-validation>
</xoopscube-dynaactionform>
