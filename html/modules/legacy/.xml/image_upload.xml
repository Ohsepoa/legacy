<?xml version="1.0" encoding="utf-8" ?>
<xoopscube-dynaactionform>
	<form-bean name="ImageUploadForm" type="XCube_ActionForm">
		<form-property name="image_name" type="ImageFile" />
		<form-property name="image_nicename" type="String" />
		<form-property name="imgcat_id" type="Int" />
	</form-bean>
	<form-validation>
		<field property="image_name" depends="extension">
			<arg0 key="const._AD_LEGACY_LANG_IMAGE_NAME" />
			<msg name="required" key="const._MD_LEGACY_ERROR_REQUIRED" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._AD_LEGACY_ERROR_EXTENSION" />
			<var name="extension" value="jpg,gif,png" />
		</field>
		<field property="image_nicename" depends="required">
			<arg0 key="const._MD_LEGACY_LANG_IMAGE_NICENAME" />
			<msg name="required" key="const._MD_LEGACY_ERROR_REQUIRED" />
		</field>
		<field property="imgcat_id" depends="required,objectExist">
			<arg0 key="const._AD_LEGACY_LANG_IMGCAT_ID" />
			<msg name="required" key="const._MD_LEGACY_ERROR_REQUIRED" />
			<msg name="objectExist" key="const._AD_LEGACY_ERROR_OBJECTEXIST" />
			<var name="handler" value="imagecategory" />
			<var name="module" value="legacy" />
		</field>
	</form-validation>
</xoopscube-dynaactionform>
