<?xml version="1.0" encoding="utf-8" ?>
<xoopscube-dynaactionform>
	<form-bean name="LostpassEditForm" type="XCube_ActionForm">
		<form-property name="email" type="String" />
	</form-bean>
	<form-validation>
		<field property="email" depends="required">
