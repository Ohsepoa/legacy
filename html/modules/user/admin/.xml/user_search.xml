<?xml version="1.0" encoding="utf-8" ?>
<xoopscube-dynaactionform>
	<form-bean name="UserSearchForm" type="XCube_ActionForm">
    <form-property name="uname" type="String" />
    <form-property name="name" type="String" />
    <form-property name="email" type="String" />
    <form-property name="user_icq" type="String" />
    <form-property name="user_aim" type="String" />
    <form-property name="user_yim" type="String" />
    <form-property name="user_msnm" type="String" />
    <form-property name="url" type="String" />
    <form-property name="user_from" type="String" />
    <form-property name="user_occ" type="String" />
    <form-property name="user_intrest" type="String" />

    <form-property name="lastlog_more" type="Int" />
    <form-property name="lastlog_less" type="Int" />
    
    <form-property name="regdate_more" type="Int" />
    <form-property name="regdate_less" type="Int" />

    <form-property name="over_posts" type="Int" />
    <form-property name="under_posts" type="Int" />

    <form-property name="mail_condition" type="Int" />
    <form-property name="user_level" type="Int" />
    
    <form-property name="groupid" type="Int[]" />
	</form-bean>
	<form-validation>
    <field property="uname" depends="maxlength">
      <arg0 key="const._MD_USER_LANG_UNAME" />
      <arg1 name="maxlength" key="${var:maxlength}" />
      <msg name="maxlength" key="const._MD_USER_ERROR_MAXLENGTH" />
      <var name="maxlength" value="25" />
    </field>
    <field property="name" depends="maxlength">
			<arg0 key="const._MD_USER_LANG_NAME" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._MD_USER_ERROR_MAXLENGTH" />
			<var name="maxlength" value="60" />
		</field>
		<field property="email" depends="maxlength">
			<arg0 key="const._MD_USER_LANG_EMAIL" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._MD_USER_ERROR_MAXLENGTH" />
			<var name="maxlength" value="60" />
		</field>
    <field property="user_icq" depends="maxlength">
      <arg0 key="const._MD_USER_LANG_USER_ICQ" />
      <arg1 name="maxlength" key="${var:maxlength}" />
      <msg name="maxlength" key="const._MD_USER_ERROR_MAXLENGTH" />
      <var name="maxlength" value="15" />
    </field>
    <field property="user_aim" depends="maxlength">
      <arg0 key="const._MD_USER_LANG_USER_AIM" />
      <arg1 name="maxlength" key="${var:maxlength}" />
      <msg name="maxlength" key="const._MD_USER_ERROR_MAXLENGTH" />
      <var name="maxlength" value="18" />
    </field>
    <field property="user_yim" depends="maxlength">
      <arg0 key="const._MD_USER_LANG_USER_YIM" />
      <arg1 name="maxlength" key="${var:maxlength}" />
      <msg name="maxlength" key="const._MD_USER_ERROR_MAXLENGTH" />
      <var name="maxlength" value="25" />
    </field>
    <field property="user_msnm" depends="maxlength">
      <arg0 key="const._MD_USER_LANG_USER_MSNM" />
      <arg1 name="maxlength" key="${var:maxlength}" />
      <msg name="maxlength" key="const._MD_USER_ERROR_MAXLENGTH" />
      <var name="maxlength" value="100" />
    </field>
 		<field property="url" depends="maxlength">
		  <arg0 key="const._MD_USER_LANG_URL" />
		  <arg1 name="maxlength" key="${var:maxlength}" />
		  <msg name="maxlength" key="const._MD_USER_ERROR_MAXLENGTH" />
		  <var name="maxlength" value="100" />
	  </field>
	  <field property="user_from" depends="maxlength">
		  <arg0 key="const._MD_USER_LANG_USER_FROM" />
		  <arg1 name="maxlength" key="${var:maxlength}" />
		  <msg name="maxlength" key="const._MD_USER_ERROR_MAXLENGTH" />
		  <var name="maxlength" value="100" />
	  </field>
	  <field property="user_occ" depends="maxlength">
		  <arg0 key="const._MD_USER_LANG_USER_OCC" />
		  <arg1 name="maxlength" key="${var:maxlength}" />
		  <msg name="maxlength" key="const._MD_USER_ERROR_MAXLENGTH" />
		  <var name="maxlength" value="100" />
	  </field>
	  <field property="user_intrest" depends="maxlength">
		  <arg0 key="const._MD_USER_LANG_USER_INTREST" />
		  <arg1 name="maxlength" key="${var:maxlength}" />
		  <msg name="maxlength" key="const._MD_USER_ERROR_MAXLENGTH" />
		  <var name="maxlength" value="150" />
	  </field>
    <field property="lastlog_more" depends="intRange">
      <arg0 key="const._AD_USER_LANG_LASTLOG_MORE" />
      <arg1 name="intRange" key="${var:min}" />
      <msg name="intRange" key="const._AD_USER_ERROR_INTRANGE" />
      <var name="min" value="0" />
      <var name="max" value="65535" />
    </field>
    <field property="lastlog_less" depends="intRange">
      <arg0 key="const._AD_USER_LANG_LASTLOG_LESS" />
      <arg1 name="intRange" key="${var:min}" />
      <msg name="intRange" key="const._AD_USER_ERROR_INTRANGE" />
      <var name="min" value="0" />
      <var name="max" value="65535" />
    </field>
    <field property="regdate_more" depends="intRange">
      <arg0 key="const._AD_USER_LANG_REGDATE_MORE" />
      <arg1 name="intRange" key="${var:min}" />
      <msg name="intRange" key="const._AD_USER_ERROR_INTRANGE" />
      <var name="min" value="0" />
      <var name="max" value="65535" />
    </field>
    <field property="regdate_less" depends="intRange">
      <arg0 key="const._AD_USER_LANG_REGDATE_LESS" />
      <arg1 name="intRange" key="${var:min}" />
      <msg name="intRange" key="const._AD_USER_ERROR_INTRANGE" />
      <var name="min" value="0" />
      <var name="max" value="65535" />
    </field>
    <field property="over_posts" depends="intRange">
      <arg0 key="const._AD_USER_LANG_OVER_POSTS" />
      <arg1 name="intRange" key="${var:min}" />
      <msg name="intRange" key="const._AD_USER_ERROR_INTRANGE" />
      <var name="min" value="0" />
      <var name="max" value="65535" />
    </field>
    <field property="under_posts" depends="intRange">
      <arg0 key="const._AD_USER_LANG_UNDER_POSTS" />
      <arg1 name="intRange" key="${var:min}" />
      <msg name="intRange" key="const._AD_USER_ERROR_INTRANGE" />
      <var name="min" value="0" />
      <var name="max" value="65535" />
    </field>
    <field property="mail_condition" depends="required,intRange">
      <arg0 key="const._AD_USER_LANG_DISPLAY_USER_MAIL_CONDITION" />
      <msg name="required" key="const._MD_USER_ERROR_REQUIRED" />
      <msg name="intRange" key="const._AD_USER_ERROR_INTRANGE" />
      <var name="min" value="1" />
      <var name="max" value="3" />
    </field>
    <field property="user_level" depends="required,intRange">
      <arg0 key="const._AD_USER_LANG_DISPLAY_USER_LEVEL" />
      <msg name="required" key="const._MD_USER_ERROR_REQUIRED" />
      <msg name="intRange" key="const._AD_USER_ERROR_INTRANGE" />
      <var name="min" value="1" />
      <var name="max" value="3" />
    </field>
    <field property="groups" depends="objectExist">
      <arg0 key="const._AD_USER_LANG_GROUP" />
      <msg name="objectExist" key="const._AD_USER_ERROR_OBJECTEXIST" />
      <var name="module" value="user" />
      <var name="handler" value="groups" />
    </field>
  </form-validation>
</xoopscube-dynaactionform>
