<?xml version="1.0" encoding="utf-8" ?>
<xoopscube-dynaactionform>
	<form-bean name="GroupAdminEditForm" type="XCube_ActionForm">
		<form-property name="groupid" type="Int" />
		<form-property name="name" type="String" />
		<form-property name="description" type="Text" />
	</form-bean>
	<form-validation>
		<field property="groupid" depends="required">
			<arg0 key="const._MD_USER_LANG_GROUPID" />
			<msg name="required" key="const._MD_USER_ERROR_REQUIRED" />
		</field>
		<field property="name" depends="required,maxlength">
			<arg0 key="const._AD_USER_LANG_GROUP_NAME" />
			<msg name="required" key="const._MD_USER_ERROR_REQUIRED" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._MD_USER_ERROR_MAXLENGTH" />
			<var name="maxlength" value="50" />
		</field>
	</form-validation>
</xoopscube-dynaactionform>
